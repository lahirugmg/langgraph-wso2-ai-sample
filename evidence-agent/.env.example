# API Manager OAuth2 Configuration
# Base URL for OAuth2 token endpoint (authentication server)
API_MANAGER_BASE_URL=https://your-gateway-id-prod.e1-us-east-azure.choreosts.dev

# OAuth2 Token Endpoint (can be explicitly set or defaults to API_MANAGER_BASE_URL/oauth2/token)
API_MANAGER_TOKEN_ENDPOINT=https://your-gateway-id-prod.e1-us-east-azure.choreosts.dev/oauth2/token

# OAuth2 Client Credentials
API_MANAGER_CLIENT_ID=your_client_id_here
API_MANAGER_CLIENT_SECRET=your_client_secret_here

# LLM Model Configuration
OPENAI_MODEL=gpt-4o-mini

# OpenAI Proxy URL - Used for LLM/Chat API calls (separate from OAuth endpoint)
# This should point to your API Gateway endpoint that proxies OpenAI API
API_MANAGER_OPENAI_PROXY_URL=https://eg-your-gateway-id-prod.e1-us-east-azure.bijiraapis.dev/your-username/openai-api/v1.0

# MCP Gateway Configuration
# Token endpoint for MCP server authentication (usually same as API_MANAGER_TOKEN_ENDPOINT)
MCP_GATEWAY_TOKEN_ENDPOINT=https://your-gateway-id-prod.e1-us-east-azure.choreosts.dev/oauth2/token

# MCP OAuth2 Client Credentials (may be same as API_MANAGER credentials)
MCP_GATEWAY_CLIENT_ID="your_mcp_client_id_here"
MCP_GATEWAY_CLIENT_SECRET="your_mcp_client_secret_here"

# MCP Server URLs - Backend services accessed via Model Context Protocol
EHR_MCP_URL=https://eg-your-gateway-id-prod.e1-us-east-azure.bijiraapis.dev/your-username/ehr-mcp-server/v1.0/mcp
TRIAL_REGISTRY_MCP_URL=https://eg-your-gateway-id-prod.e1-us-east-azure.bijiraapis.dev/your-username/trials-mcp-server/v1.0/mcp
